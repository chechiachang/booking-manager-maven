<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navagation-rule>
        <from-view-id>/pages/mail.jsp</from-view-id>
    </navagation-rule>   
    <managed-bean>
        <managed-bean-name>emailUtil</managed-bean-name>
        <managed-bean-class>com.ccc.mavenbmcp.mail.EmailUtil</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>  
    <managed-bean>
        <managed-bean-name>helloWorld</managed-bean-name>
        <managed-bean-class>com.ccc.mavenbmcp.mail.HelloWorld</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>        
    <managed-bean>
        <managed-bean-name>welcomeEmail</managed-bean-name>
        <managed-bean-class>com.ccc.mavenbmcp.mail.WelcomeEmail</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>message</managed-bean-name>
        <managed-bean-class>com.ccc.mavenbmcp.mail.Message</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
